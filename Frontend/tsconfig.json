{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",  // Jest works with commonjs
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",  // Include source files
    "jest.setup.js"  // Include Jest setup file
  ]
}
